<view><cu-custom vue-id="1" bgColor="bg-linear-blue" isBack="{{true}}" bind:__l="__l" vue-slots="{{['backText','content','right']}}"><view slot="backText">返回</view><view slot="content">车辆维修申请详情</view><view hidden="{{!(info.status>=3||info.status<=-2)}}" slot="right" data-event-opts="{{[['tap',[['toRepairOrder',['$event']]]]]}}" bindtap="__e">维修单</view></cu-custom><view class="cu-bar bg-white solid-bottom"><view class="action">维修申请进度</view></view><view class="bg-white padding"><view class="cu-steps"><block wx:for="{{steps}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="{{['cu-item',item.color]}}"><text class="cuIcon-roundcheckfill"></text>{{''+item.name+''}}</view></block></view></view><block wx:if="{{info.status<0}}"><view class="cu-bar bg-white solid-bottom"><view class="action">不通过原因：<text class="text-red">{{info.fail_reason}}</text></view></view></block><view class="cu-bar bg-white solid-bottom"><view class="action">编号：<text class="text-bold">{{info.order_code}}</text></view></view><view class="cu-bar bg-white solid-bottom"><view class="action">车辆：<text class="text-bold">{{info.brand+" "+info.car_number}}</text></view></view><view class="cu-bar bg-white solid-bottom"><view class="action">申请人：<text class="text-bold">{{info.user_name+"("+info.user_phone+")"}}</text></view></view><view class="cu-bar bg-white solid-bottom"><view class="action">类型：<text class="text-bold">{{info.type==1?"维修":"保养"}}</text></view></view><view class="cu-bar bg-white solid-bottom"><view class="action">申请时间：<text class="text-bold">{{info.create_time}}</text></view></view><view class="cu-bar bg-white solid-bottom"><view class="action">备注：<text class="text-bold">{{info.desc}}</text></view></view><block wx:if="{{info.zz_name.length>0}}"><view class="cu-bar bg-white solid-bottom"><view class="action">组长审批：<text class="text-bold">{{info.zz_name+" "+info.zzsp_time}}</text></view></view></block><block wx:if="{{info.zr_name.length>0}}"><view class="cu-bar bg-white solid-bottom"><view class="action">主任审批：<text class="text-bold">{{info.zr_name+" "+info.end_area}}</text></view></view></block><block wx:if="{{info.business.length>0}}"><view class="cu-bar bg-white solid-bottom"><view class="action">维修出单：<text class="text-bold">{{info.business+" "+info.cwxd_time}}</text></view></view></block><block wx:if="{{info.jz_name.length>0}}"><view class="cu-bar bg-white solid-bottom"><view class="action">局长审批：<text class="text-bold">{{info.jz_name+" "+info.jzsp_time}}</text></view></view></block><block wx:if="{{info.status==3}}"><view class="padding" style="display:inline-flex;"><button data-event-opts="{{[['tap',[['verifyFail',['$event']]]]]}}" class="cu-btn bg-red lg" bindtap="__e">审核不通过</button></view></block><block wx:if="{{info.status==3}}"><view class="padding" style="display:inline-flex;float:right;"><button data-event-opts="{{[['tap',[['verifySuccess',['$event']]]]]}}" class="cu-btn bg-green lg" bindtap="__e">审批通过</button></view></block><view class="{{['cu-modal',showModal?'show':'']}}"><view class="cu-dialog"><view class="cu-bar bg-white justify-end"><view class="content">审核不通过</view><view data-event-opts="{{[['tap',[['hideModal',['$event']]]]]}}" class="action" bindtap="__e"><text class="cuIcon-close text-red"></text></view></view><view><view class="cu-form-group" style="text-align:left;"><textarea maxlength="100" placeholder="不通过原因" data-event-opts="{{[['input',[['fillFailReason',['$event']]]]]}}" bindinput="__e"></textarea></view></view><view class="cu-bar bg-white justify-end"><view class="action"><button data-event-opts="{{[['tap',[['hideModal',['$event']]]]]}}" class="cu-btn line-green text-green" bindtap="__e">取消</button><button data-event-opts="{{[['tap',[['sureModal',['$event']]]]]}}" class="cu-btn bg-green margin-left" bindtap="__e">确定</button></view></view></view></view></view>