<view><cu-custom vue-id="1" bgColor="bg-gradual-pink" isBack="{{true}}" bind:__l="__l" vue-slots="{{['backText','content']}}"><view slot="backText">返回</view><view slot="content">维修单</view></cu-custom><form><view class="cu-bar bg-white solid-bottom"><view class="action"><text class="cuIcon-title text-orange"></text>维修项目</view></view><view class="cu-form-group"><view class="title">维修项目数量</view><picker value="{{numberIndex}}" range="{{numbers}}" data-event-opts="{{[['change',[['ChangeNumber',['$event']]]]]}}" bindchange="__e"><view class="picker">{{''+numbers[numberIndex]+''}}</view></picker></view><block wx:for="{{para.item}}" wx:for-item="repairItem" wx:for-index="index" wx:key="id"><view class="cu-item arrow border"><view class="cu-form-group"><view class="title">{{"维修项目"+(index+1)}}</view><input name="input" data-event-opts="{{[['input',[['__set_model',['$0','item_name','$event',[]],['para.item.'+index+'']]]]]}}" value="{{para.item[index].item_name}}" bindinput="__e"/></view><view class="cu-form-group"><view class="title">工时费</view><input name="input" data-event-opts="{{[['input',[['__set_model',['$0','item_fee','$event',[]],['para.item.'+index+'']]]]]}}" value="{{para.item[index].item_fee}}" bindinput="__e"/></view></view></block><view class="cu-bar bg-white solid-bottom"><view class="action"><text class="cuIcon-title text-orange"></text>维修配件</view></view><view class="cu-form-group"><view class="title">配件种类数量</view><picker value="{{partIndex}}" range="{{partNumbers}}" data-event-opts="{{[['change',[['ChangePartNumber',['$event']]]]]}}" bindchange="__e"><view class="picker">{{''+partNumbers[partIndex]+''}}</view></picker></view><block wx:for="{{para.parts}}" wx:for-item="partItem" wx:for-index="index" wx:key="id"><view class="cu-item arrow border"><view class="cu-form-group"><view class="title">{{"配件"+(index+1)}}</view><input name="input" data-event-opts="{{[['input',[['__set_model',['$0','parts_name','$event',[]],['para.parts.'+index+'']]]]]}}" value="{{para.parts[index].parts_name}}" bindinput="__e"/></view><view class="cu-form-group"><view class="title">数量</view><input name="input" type="number" data-event-opts="{{[['input',[['__set_model',['$0','num','$event',[]],['para.parts.'+index+'']]]]]}}" value="{{para.parts[index].num}}" bindinput="__e"/></view><view class="cu-form-group"><view class="title">单价</view><input name="input" type="number" data-event-opts="{{[['input',[['__set_model',['$0','price','$event',[]],['para.parts.'+index+'']]]]]}}" value="{{para.parts[index].price}}" bindinput="__e"/></view></view></block><view class="padding flex flex-direction"><button data-event-opts="{{[['tap',[['Submit',['$event']]]]]}}" class="cu-btn bg-orange margin-tb-sm lg" bindtap="__e">提交</button></view></form></view>